<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black">

        <TextView
            android:id="@+id/tv_hi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="cursive"
            android:text="Hi!"
            android:textColor="@color/amber_A700"
            android:textSize="100dp" />

        <TextView
            android:layout_below="@+id/iv_poker4"
            android:id="@+id/tv_redy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="150dp"
            android:padding="50dp"
            android:fontFamily="monospace"
            android:lines="3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/redy"
            android:textColor="@color/amber_A700"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tv_run"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:lines="3"
            android:textStyle="bold"
            android:textAlignment="center"
            android:text="@string/run"
            android:textColor="@color/amber_A700"
            android:textSize="25dp" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_seen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:padding="10dp"
                android:textSize="20dp"

                />
        </ScrollView>

        <TextView
            android:id="@+id/tv_number"
            android:layout_below="@+id/tv_run"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text=""
            android:textColor="@color/amber_A700"
            android:textSize="200dp" />

        <ImageView
            android:id="@+id/iv_poker1"
            android:layout_width="144dp"
            android:layout_height="210dp"
            android:src="@drawable/sau" />

        <ImageView
            android:id="@+id/iv_poker2"
            android:layout_width="144dp"
            android:layout_height="210dp"
            android:src="@drawable/sau" />



        <ImageView
            android:id="@+id/iv_poker4"
            android:layout_width="140dp"
            android:layout_marginTop="200dp"
            android:layout_centerInParent="true"
            android:layout_height="210dp"
            android:src="@drawable/sau" />

        <Button
            android:id="@+id/btn_giai"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="@string/giai"
            android:textAllCaps="false"
            android:layout_below="@+id/iv_poker4"
            android:layout_centerHorizontal="true"
            />
    </RelativeLayout>
</layout>